<% n = page.id -%>
<table id="page_<%= n %>" mediatype="page">
 <tr>
  <td id="page_<%= n %>_thumb" class="thumb" rowspan="3"><%= link_to "Thumbnail", page %></td>
  <td id="page_<%= n %>_title" class="data">
   <%= link_to page.title, page %>
   <%= link_to page.author, "userpage.html" %>
   <span><%= page.views %> views</span>
  </td>
 </tr>
 <tr>
  <td id="page_<%= n %>_desc" colspan="2">
   <span><%= page.info %></span>
<%- if ["talk","show"].include? params[:action] -%>
   <span>(<%= link_to "Page", pages_path %>)</span>
<%- end -%>
  </td>
 </tr>
 <tr>
  <td class="actions" colspan="2">
<%- if ["index"].include? params[:action] -%>
   <%= link_to "Discussion", talk_page_path(page) %>
<%- end -%>
   <span class="view">
    <%= link_to "View in page editor", edit_page_path(page) %>
   </span>
  </td>
 </tr>
</table>
