<%-
 form[:pair]||={}
 n=form[:n]+1
-%>
<div id="<%= (form[:pair]=={})?"form_stamp":("form_"+n.to_s) %>" class="hide">
 <div class="navlist">
  <div><%= form[:pair].keys[0] %></div>
  <ul class="hr">
   <li style="background-color:orange">
    <a href="#" onclick="toggle_list(this);return false">Form</a>
   </li>
   <li>
    <a href="#" onclick="toggle_list(this);return false">Render</a>
   </li>
  </ul>
  <div class="hr"><a href="#" onmousedown="menu({it:this.parentNode,list:{Insert:ins,Delete:del,Move:location.href}});return false" onclick="return false">Menus</a></div
  ><ul id="menu_items_1" mediatype="pagefrag"></ul>
 </div>
 <textarea class="editor_window"<%= (form[:pair]=={})?"":" name='data[forms][][" + form[:pair].keys[0] + "]' id='form_code_" + n.to_s + "'" %>><%= form[:pair].values[0] %></textarea>
 <div class="editor_window" style="display:none"<%= (form[:pair]=={})?"":" id='form_result_" + n.to_s + "'"%>></div>
</div>
